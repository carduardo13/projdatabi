<mvc:View controllerName="projdataba.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content> 

           <layout:HorizontalLayout id="layout"  > 
            <Input id="inpNome" value="{dados>/pessoa/nome}"  valueLiveUpdate="true"/>
            <Input id="inpSobre" value="{dados>/pessoa/sobrenome}"  valueLiveUpdate="true"/>

            <Text id="txt" text="{dados>/pessoa/nome}  {dados>/pessoa/sobrenome} " />

            <Select id="slc1" 
                    selectedKey="{dados>/pessoa/estado}"
                    items="{estados>/}">
                <core:Item id="itm1" key="{estados>uf}" text="{estados>nome}" />        
            </Select>
            </layout:HorizontalLayout>

            <Table id="tabela" items="{dados>/pessoa/contatos}">
                <columns>
                    <Column id="col1">
                    <Text id="txt1" text="Nome" />
                    </Column>

                    <Column id="col2">
                    <Text id="txt2" text="Tipo" />
                    </Column>

                    <Column id="col3">
                    <Text id="txt3" text="Valor" />
                    </Column>
                </columns>
                <items>

                    <ColumnListItem id="colist">
                        <cells>
                            <Text id="txt4" text="{dados>nome}" />
                            <Text id="txt5" text="{dados>tipo}" />
                            <Text id="txt6" text="{dados>valor}" />
                        </cells>
                    </ColumnListItem>

                </items>
            </Table>

        </content>
    </Page>
</mvc:View>
